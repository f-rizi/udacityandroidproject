<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:internal="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_short"
    android:paddingBottom="@dimen/margin_short"
    android:layout_marginEnd="@dimen/margin_standard"
    android:id="@+id/review_Linear_layout"
    android:layout_marginStart="@dimen/margin_standard">

    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/content_expandable_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:ellipsize="end"
        android:clickable="true"
        android:layout_margin="@dimen/margin_short" />

    <TextView
        android:id="@+id/url_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone"/>

</LinearLayout>